server {
     listen 80;

     return 301 https://$host$request_uri;
}

server {
     listen 443 ssl;
     listen [::]:443 ssl;
     ssl_certificate /etc/ssl/nginx-selfsigned.crt;
     ssl_certificate_key /etc/ssl/nginx-selfsigned.key;

	location / {
		try_files $uri $uri/ =404;
        #try_files $uri $uri/ /index.php$is_args$args;
    }
 }